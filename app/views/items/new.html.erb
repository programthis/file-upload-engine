<%= form_with scope: :item, url: items_path, local: true do |form| %>
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>
    <p>
        <%= form.label :filetype %><br>
        <%= form.text_field :filetype %>
    </p>
    <p>
        <%= form.label :file %><br>
        <%= form.file_field :file %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>