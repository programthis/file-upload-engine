<%= form_with scope: :upload, url: uploads_path, local: true do |form| %>
    <p>
        <%= form.label :files %><br>
        <%= form.file_field :files, multiple: true %>
    </p>
    <p>
        <%= form.label :tags %><br>
        <%= form.text_field :tags %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= simple_form_for @upload, url: uploads_path do |f| %>
	<%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true} %>
	<%= f.submit "Next", class: 'btn btn-lg btn-primary float-right' %>
<% end %>